      a.social-icon(href='#', target='_blank', style="display: inline-flex; width: 85px; height: 85px; border-radius: 20px; align-items: center; justify-content: center; transition: transform 0.3s ease, box-shadow 0.3s ease; background: #d4d6f0; box-shadow: 0 3px 15px rgba(0, 0, 0, 0.1);", title="Facebook")
