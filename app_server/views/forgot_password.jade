extends layout

block content
  .content
    .forgot-password-card
      if typeof success !== 'undefined' && success
        .success-message(style="color:#28a745;margin-bottom:16px;font-weight:bold;padding:12px;background:#d4edda;border:1px solid #c3e6cb;border-radius:8px;") #{success}
      if typeof error !== 'undefined' && error
        .error-message(style="color:#d32f2f;margin-bottom:16px;font-weight:bold;padding:12px;background:#f8d7da;border:1px solid #f5c6cb;border-radius:8px;") #{error}
      form(action="/users/forgot-password", method="post")
        h1 Forgot Password
        p.subtitle Enter your email address and we'll send you a verification link to reset your password.
        .input-group
          label(for="email") Email Address
          input(type="email", id="email", name="email", placeholder="Enter your registered email", required)
        button(type="submit", class="btn")
          span Send Verification Link
        .links
          a(href="/users/signin") Back to Sign In

  style.
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
    .content {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 40px 20px;
      width: 100%;
    }
    .forgot-password-card {
      background: rgba(255, 255, 255, 0.95);
      border-radius: 20px;
      padding: 40px;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      max-width: 450px;
      width: 100%;
      backdrop-filter: blur(10px);
    }
    h1 {
      text-align: center;
      color: #6b21a8;
      margin-bottom: 10px;
      font-size: 28px;
      font-weight: 700;
    }
    .subtitle {
      text-align: center;
      color: #666;
      font-size: 14px;
      margin-bottom: 30px;
      line-height: 1.5;
    }
    .input-group {
      margin-bottom: 20px;
    }
    label {
      display: block;
      margin-bottom: 8px;
      color: #333;
      font-weight: 600;
      font-size: 14px;
    }
    input {
      width: 100%;
      padding: 14px;
      border: 2px solid #e0e0e0;
      border-radius: 10px;
      font-size: 15px;
      transition: all 0.3s ease;
      background: #f9f9f9;
    }
    input:focus {
      outline: none;
      border-color: #6b21a8;
      background: #fff;
      box-shadow: 0 0 0 3px rgba(107, 33, 168, 0.1);
    }
    .btn {
      width: 100%;
      padding: 14px;
      background: #6b21a8;
      color: white;
      border: none;
      border-radius: 10px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      margin-top: 10px;
    }
    .btn:hover {
      background: #7c3aed;
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(107, 33, 168, 0.3);
    }
    .btn:active {
      transform: translateY(0);
    }
    .links {
      text-align: center;
      margin-top: 20px;
    }
    .links a {
      color: #6b21a8;
      text-decoration: none;
      font-weight: 500;
      font-size: 14px;
    }
    .links a:hover {
      text-decoration: underline;
      color: #7c3aed;
    }
    
    @media (max-width: 768px) {
      .forgot-password-card {
        padding: 30px 25px;
      }
      h1 {
        font-size: 24px;
      }
    }
