extends layout

block content
  .navbar
    .logo-container
      img(src="/images/Campus.png", alt="Secure Campus Logo")
      div
        span Secure
        span Campus
    .nav-links
      a(href="/") Home
      a(href="/complaint") Complaint Box
      a(href="#") Lost and Found
      a(href="#") About
      a(href="#") Support
  .content
    .login-card
      h2 Sign In to Your Account
      form(action="/signin", method="post")
        .input-group
          label(for="email") Email Address
          input(type="email" id="email" name="email" placeholder="Enter your email" required)
        .input-group
          label(for="password") Password
          input(type="password" id="password" name="password" placeholder="Enter your password" required)
        button(type="submit" class="btn")
          span Sign In
      .links
        a(href="/signup") Don't have an account? Sign Up
